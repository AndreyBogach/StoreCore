@model StoreCore.Web.Models.ProductViewModel

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html {
        font-size: 16px;
    }

    body {
        background: linear-gradient(to right, rgba(33, 32, 32, 0.75), rgba(33, 32, 32, 0.75)), url(/Content/coworking_RTOWN-compressor.jpg) center center no-repeat;
        background-size: cover;
    }

    input.form-control, textarea.form-control {
        min-height: 40px;
        font-size: 16px;
    }

    ul.nav.navbar-nav, .head-foot {
        display: none;
    }

        ul.nav.navbar-nav.navbar-right {
            display: block;
        }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2 col-md-8 col-lg-offset-3 col-lg-6 bordered-form" style="margin-top: 60px">

            <h1>Product</h1>
            <hr />
            <a href="/" class="close-button"><span>&#10006;</span></a>

            @using (Html.BeginForm("UpdateProduct", "Product", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required", @placeholder = "Product name" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.Count, new { @class = "form-control", @required = "required", @placeholder = "Product amount" })
                            @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @required = "required", @placeholder = "Product price, $" })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-primary btn-lg pull-right sign-up-btn" value="Save" style="width: 100%; padding: 10px 12px; margin: 20px 0;">
                    </div>
                </div>
            }
        </div>
    </div>
</div>